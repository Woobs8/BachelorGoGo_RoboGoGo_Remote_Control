<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListViewDialogInfoLeft"
        android:layout_marginLeft="4mm">
        <TextView
            android:text="@string/text_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMac"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCameraAvailable"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/text_camera_available"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStorageSpace"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/text_storage_space"
            android:layout_marginTop="10dp"/>

        <TextView
            android:text="@string/text_storage_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvStorageRemaining"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ListViewDialogInfoLeft"
        android:id="@+id/ListViewDialogInfoRight"
        android:layout_marginLeft="2mm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeviceMacHere"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="text"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeviceCameraAvailableHere"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="text"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:text="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeviceStorageSpaceHere"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDeviceStorageRemainingHere"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="text"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


</RelativeLayout>