<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:text="@string/text_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tvMac"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceMacHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="text"
        android:layout_below="@+id/tvMac"
        android:layout_alignLeft="@+id/tvMac"
        android:layout_alignStart="@+id/tvMac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCameraAvailable"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvDeviceStorageRemainingHere"
        android:layout_alignLeft="@+id/tvDeviceMacHere"
        android:layout_alignStart="@+id/tvDeviceMacHere"
        android:text="@string/text_camera_available" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceCameraAvailableHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="text"
        android:layout_below="@+id/tvCameraAvailable"
        android:layout_alignLeft="@+id/tvMac"
        android:layout_alignStart="@+id/tvMac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStorageSpace"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tvDeviceMacHere"
        android:layout_alignLeft="@+id/tvDeviceMacHere"
        android:layout_alignStart="@+id/tvDeviceMacHere"
        android:text="@string/text_storage_space" />

    <TextView
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceStorageSpaceHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/tvStorageSpace"
        android:layout_alignLeft="@+id/tvStorageSpace"
        android:layout_alignStart="@+id/tvStorageSpace" />

    <TextView
        android:text="@string/text_storage_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/tvStorageRemaining"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/tvDeviceStorageSpaceHere"
        android:layout_alignLeft="@+id/tvDeviceStorageSpaceHere"
        android:layout_alignStart="@+id/tvDeviceStorageSpaceHere" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceStorageRemainingHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="text"
        android:layout_below="@+id/tvStorageRemaining"
        android:layout_alignLeft="@+id/tvStorageRemaining"
        android:layout_alignStart="@+id/tvStorageRemaining" />

</RelativeLayout>