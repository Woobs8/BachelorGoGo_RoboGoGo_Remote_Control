<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:text="@string/text_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/tvMac"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceMacHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="text"
        android:layout_below="@+id/tvMac"
        android:layout_alignLeft="@+id/tvMac"
        android:layout_alignStart="@+id/tvMac" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStorageSpace"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvDeviceMacHere"
        android:layout_alignLeft="@+id/tvDeviceMacHere"
        android:layout_alignStart="@+id/tvDeviceMacHere"
        android:text="@string/text_ip_address" />

    <TextView
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeviceStorageSpaceHere"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/tvStorageSpace"
        android:layout_alignLeft="@+id/tvStorageSpace"
        android:layout_alignStart="@+id/tvStorageSpace" />
</RelativeLayout>